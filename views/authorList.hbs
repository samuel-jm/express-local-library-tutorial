<h1>{{title}}</h1>
{{#if author_list.length}}
  <ul>
    {{#each author_list}}
      <li>
        <a href={{this.url}}>{{this.name}}</a>
        (
        {{this.date_of_birth_formatted}}
        -
        {{this.date_of_death_formatted}}
        )
      </li>
    {{/each}}
  </ul>
{{else}}
  <p>There a re no authors.</p>
{{/if}}