<%- include("./partials/header") %>
<h1><%= title %></h1>

<form method="post">
  <div class="form-group">
    <label for="first_name">First Name:</label>
    <input
      id="first_name"
      class="form-control"
      type="text"
      placeholder="First name (Christian)"
      name="first_name"
      value="<%= locals.author ? author.first_name : "" %>"
      required
    />
    <label for="family_name">Family Name:</label>
    <input
      id="family_name"
      class="form-control"
      type="text"
      placeholder="Family name (Surname)"
      name="family_name"
      value="<%= locals.author ? author.family_name : "" %>"
      required
    />
  </div>
  <div class="form-group">
    <label for="date_of_birth">Date of birth:</label>
    <input 
      type="date"
      id="date_of_birth"
      class="form-control"
      type="date"
      name="date_of_birth"
      value="<%= locals.author ? author.date_of_birth_yyyy_mm_dd : "" %>"
    />
    <label for="date_of_death">Date of death:</label>
    <input 
      type="date"
      id="date_of_death"
      class="form-control"
      type="date"
      name="date_of_death"
      value="<%= locals.author ? author.date_of_death_yyyy_mm_dd : "" %>"
    />
  </div>
  <button class="btn btn-primary" type="submit">Submit</button>
</form>

<% if(locals.errors) { %>
<% errors.forEach(error => { %>
<li><%= error.msg %></li>
<% })} %>
<%- include("./partials/footer") %>
