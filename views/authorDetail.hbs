<h1>{{title}}</h1>
<p>{{author.lifespan}}</p>

<div style="margin-left:20px;margin-top:20px">
  <h2 style="font-size: 1.5rem;">Books</h2>
  {{#if author_books.length}}
    <dl>
      {{#each author_books}}
        <dt>
          <a href={{this.url}}>{{this.title}}</a>
        </dt>
        <dd>{{this.summary}}</dd>
      {{/each}}
    </dl>
  {{else}}
    <p>This author has no books.</p>
  {{/if}}
</div>